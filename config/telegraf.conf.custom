{% extends "telegraf.conf" %}
{% block custom %}

{% raw %}
[[inputs.procstat]]
  pattern = "influxd.run..config.{{MFMODULE_RUNTIME_HOME}}.tmp.config_auto.influxdb.conf"
  user = "{{MFMODULE_RUNTIME_USER}}"
  process_name = "influxdb"

[[inputs.filecount]]
  directories = ["{{MFMODULE_RUNTIME_HOME}}/var/influxdb"]
  name = "*"
  recursive = true
  regular_only = true
  size = "0B"
  mtime = "0s"

{% endraw %}

{% endblock %}
